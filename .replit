modules = ["python-3.12", "nodejs-20", "rust-stable", "web"]
run = "cargo run"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "cargo run"]

[workflows]
runButton = "Run"

[[workflows.workflow]]
name = "Run"
author = 40463440
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm run dev"

[[workflows.workflow]]
name = "Build Rust Core"
author = 40463440
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend/rust-core && wasm-pack build --target web"
